
<ul>
  <% @grid.each do |letter| %>
  <li><%= letter %></li>
  <% end %>
</ul>
<p> What is the longest word you can find? </p>
<form action="/score" method="post">
  <input type="text" name="score" placeholder="Enter word">
  <input type="submit" value = "Play">
  <%= hidden_field_tag :grid, @grid %>
</form>
